Frontend (index.php)
<?php
include 'db.php';

// taal ophalen uit localStorage via JS → fallback standaard NL
$lang = 'nl';
if (isset($_GET['lang'])) {
    $lang = $_GET['lang'];
}
?>
<!DOCTYPE html>
<html lang="<?= $lang ?>">
<head>
    <meta charset="UTF-8">
    <title>Panorama Utrecht – 1859 Stijl</title>
    <link rel="stylesheet" href="startscherm.css">
</head>
<body>
<div class="frame">
    <div class="top-buttons">
        <button class="nav-button">BEGIN</button>
        <!-- Twee aparte taal-knoppen -->
        <button id="btn-nl" class="nav-button">Nederlands</button>
        <button id="btn-en" class="nav-button">English</button>
        <button class="nav-button info-button">i</button>
    </div>

    <!-- Titel en subtitel uit DB -->
    <?php
    $title = $conn->query("SELECT value FROM texts WHERE key_name='title' AND lang='$lang'")
                  ->fetch_assoc()['value'] ?? 'PANORAMA VAN UTRECHT';
    $subtitle = $conn->query("SELECT value FROM texts WHERE key_name='subtitle' AND lang='$lang'")
                     ->fetch_assoc()['value'] ?? 'Hoe werkt het?';
    ?>
    <h1 class="title"><?= $title ?></h1>

    <div class="icon-block">
        <h2 class="icon-heading"><?= $subtitle ?></h2>
        <div class="icon-row">
            <?php
            $icons = $conn->query("SELECT * FROM icons WHERE lang='$lang'");
            while($i = $icons->fetch_assoc()):
            ?>
            <div class="icon-item">
                <img src="img/<?= $i['image'] ?>" alt="<?= $i['alt_text'] ?>">
                <p><?= $i['description'] ?></p>
            </div>
            <?php endwhile; ?>
        </div>
    </div>

    <div class="buttons">
        <?php
        $buttons = $conn->query("SELECT * FROM buttons WHERE lang='$lang'");
        while($b = $buttons->fetch_assoc()):
        ?>
        <button class="button" onclick="<?= $b['action'] ?>"><?= $b['label'] ?></button>
        <?php endwhile; ?>
    </div>
</div>

<script src="app.js"></script>
</body>
</html>


back end systeem eerste pagina start pagina dus 

CREATE DATABASE panorama CHARACTER SET utf8mb4 COLLATE utf8mb4_unicode_ci;
USE panorama;

-- Algemene teksten
CREATE TABLE texts (
    id INT AUTO_INCREMENT PRIMARY KEY,
    key_name VARCHAR(50),
    lang VARCHAR(5),       -- 'nl' of 'en'
    value TEXT,
    UNIQUE(key_name, lang)
);

-- Iconen
CREATE TABLE icons (
    id INT AUTO_INCREMENT PRIMARY KEY,
    image VARCHAR(255),
    alt_text VARCHAR(255),
    description TEXT,
    lang VARCHAR(5)
);

-- Knoppen
CREATE TABLE buttons (
    id INT AUTO_INCREMENT PRIMARY KEY,
    label VARCHAR(100),
    action VARCHAR(255),
    lang VARCHAR(5)
);
------------------------------------------------------------------------------------------------------------------------
iconen crud 

<?php
include 'db.php';

/* ---------------- TEXTS CRUD ---------------- */
if (isset($_POST['update_text'])) {
    $stmt = $conn->prepare("UPDATE texts SET value=? WHERE key_name=? AND lang=?");
    $stmt->bind_param("sss", $_POST['value'], $_POST['key_name'], $_POST['lang']);
    $stmt->execute();
}
$texts = $conn->query("SELECT * FROM texts ORDER BY key_name, lang");

/* ---------------- ICONS CRUD ---------------- */
if (isset($_POST['add_icon'])) {
    $stmt = $conn->prepare("INSERT INTO icons (image, alt_text, description, lang) VALUES (?, ?, ?, ?)");
    $stmt->bind_param("ssss", $_POST['image'], $_POST['alt_text'], $_POST['description'], $_POST['lang']);
    $stmt->execute();
}
if (isset($_POST['update_icon'])) {
    $stmt = $conn->prepare("UPDATE icons SET image=?, alt_text=?, description=?, lang=? WHERE id=?");
    $stmt->bind_param("ssssi", $_POST['image'], $_POST['alt_text'], $_POST['description'], $_POST['lang'], $_POST['id']);
    $stmt->execute();
}
if (isset($_GET['delete_icon'])) {
    $conn->query("DELETE FROM icons WHERE id=".(int)$_GET['delete_icon']);
}
$icons = $conn->query("SELECT * FROM icons ORDER BY lang");

/* ---------------- BUTTONS CRUD ---------------- */
if (isset($_POST['add_button'])) {
    $stmt = $conn->prepare("INSERT INTO buttons (label, action, lang) VALUES (?, ?, ?)");
    $stmt->bind_param("sss", $_POST['label'], $_POST['action'], $_POST['lang']);
    $stmt->execute();
}
if (isset($_POST['update_button'])) {
    $stmt = $conn->prepare("UPDATE buttons SET label=?, action=?, lang=? WHERE id=?");
    $stmt->bind_param("sssi", $_POST['label'], $_POST['action'], $_POST['lang'], $_POST['id']);
    $stmt->execute();
}
if (isset($_GET['delete_button'])) {
    $conn->query("DELETE FROM buttons WHERE id=".(int)$_GET['delete_button']);
}
$buttons = $conn->query("SELECT * FROM buttons ORDER BY lang");
?>
<!DOCTYPE html>
<html lang="nl">
<head>
    <meta charset="UTF-8">
    <title>Admin CRUD</title>
    <link rel="stylesheet" href="admin.css">
</head>
<body>
<div class="admin-container">
    <h1>Beheer Startscherm</h1>

    <section>
        <h2>Algemene teksten</h2>
        <?php while($t = $texts->fetch_assoc()): ?>
        <form method="post" class="crud-form">
            <input type="hidden" name="key_name" value="<?= $t['key_name'] ?>">
            <input type="hidden" name="lang" value="<?= $t['lang'] ?>">
            <label><?= $t['key_name'] ?> (<?= strtoupper($t['lang']) ?>):</label>
            <input type="text" name="value" value="<?= $t['value'] ?>">
            <button type="submit" name="update_text">Opslaan</button>
        </form>
        <?php endwhile; ?>
    </section>

    <section>
        <h2>Iconen</h2>
        <form method="post" class="crud-form">
            <input type="text" name="image" placeholder="Bestandsnaam">
            <input type="text" name="alt_text" placeholder="Alt-tekst">
            <input type="text" name="description" placeholder="Beschrijving">
            <select name="lang">
                <option value="nl">NL</option>
                <option value="en">EN</option>
            </select>
            <button type="submit" name="add_icon">Toevoegen</button>
        </form>
        <table>
            <tr><th>Afbeelding</th><th>Alt</th><th>Beschrijving</th><th>Taal</th><th>Acties</th></tr>
            <?php while($i = $icons->fetch_assoc()): ?>
            <tr>
                <form method="post">
                    <td><input type="text" name="image" value="<?= $i['image'] ?>"></td>
                    <td><input type="text" name="alt_text" value="<?= $i['alt_text'] ?>"></td>
                    <td><input type="text" name="description" value="<?= $i['description'] ?>"></td>
                    <td>
                        <select name="lang">
                            <option value="nl" <?= $i['lang']=='nl'?'selected':'' ?>>NL</option>
                            <option value="en" <?= $i['lang']=='en'?'selected':'' ?>>EN</option>
                        </select>
                    </td>
                    <td>
                        <input type="hidden" name="id" value="<?= $i['id'] ?>">
                        <button type="submit" name="update_icon">Opslaan</button>
                        <a href="?delete_icon=<?= $i['id'] ?>" class="delete">Verwijderen</a>
                    </td>
                </form>
            </tr>
            <?php endwhile; ?>
        </table>
    </section>

    <section>
        <h2>Knoppen</h2>
        <form method="post" class="crud-form">
            <input type="text" name="label" placeholder="Knoptekst">
            <input type="text" name="action" placeholder="JS functie of URL">
            <select name="lang">
                <option value="nl">NL</option>
                <option value="en">EN</option>
            </select>
            <button type="submit" name="add_button">Toevoegen</button>
        </form>
        <table>
            <tr><th>Label</th><th>Action</th><th>Taal</th><th>Acties</th></tr>
            <?php while($b = $buttons->fetch_assoc()): ?>
            <tr>
                <form method="post">
                    <td><input type="text" name="label" value="<?= $b['label'] ?>"></td>
                    <td><input type="text" name="action" value="<?= $b['action'] ?>"></td>
                    <td>
                        <select name="lang">
                            <option value="nl" <?= $b['lang']=='nl'?'selected':'' ?>>NL</option>
                            <option value="en" <?= $b['lang']=='en'?'selected':'' ?>>EN</option>
                        </select>
                    </td>
                    <td>
                        <input type="hidden" name="id" value="<?= $b['id'] ?>">
                        <button type="submit" name="update_button">Opslaan</button>
                        <a href="?delete_button=<?= $b['id'] ?>" class="delete">Verwijderen</a>
                    </td>
                </form>
            </tr>
            <?php endwhile; ?>
        </table>
    </section>
</div>
</body>
</html>

